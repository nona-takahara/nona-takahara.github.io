---
import { Image } from "astro:assets";
import type { WorkItem } from "./WorkItem";
import "@styles/card.scss";
import type { CollectionEntry } from "astro:content";

interface Props {
  props: CollectionEntry<"applist">;
  detailLink: boolean;
}
const { props, detailLink } = Astro.props;

const bottomLinks = props.data.links.filter((v) => v.label != undefined);
---

<div class="card">
  <div class="card-content">
    <a
      class="card-main"
      href={(!detailLink && props.data.links?.find((v) => v?.main)?.url) ||
        "/works/" + props.slug + ".html"}
    >
      <Image
        src={props.data.icon || "/icon-192.png"}
        width="120"
        height="120"
        alt={props.data.title + "のアイコン"}
        style={props.data.iconPixelated ? "image-rendering: pixelated;" : ""}
      />
      <div>
        <h3 class="card-title">
          {props.data.title}
        </h3>
        <p class="card-description">
          {props.data.short}
        </p>
      </div>
    </a>
    {
      !detailLink && bottomLinks.length > 0 && (
        <div class="card-link-list">
          {bottomLinks.map((li) => {
            return (
              <a class="card-link" href={li.url}>
                <span>{li.label}</span>
              </a>
            );
          })}
        </div>
      )
    }
  </div>
</div>
