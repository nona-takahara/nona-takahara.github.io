---
import "@styles/common.scss";
import type { OgPageType } from "./Og";
import BaseHeader from "../components/BaseHeader.astro";
import BaseBody from "../components/BaseBody.astro";
import Html from "../components/Html.astro";

interface Props {
  katex?: boolean;
  titleShort?: string;
  titleSuffix?: string;
  description: string;
  pageType: OgPageType;
  highlight?: boolean;
}

const {
  katex = false,
  titleShort = "",
  titleSuffix = "こーげんやさい",
  description = "",
  pageType = "article",
  highlight = false,
} = Astro.props;
---

<Html>
  <BaseHeader
    katex={katex}
    titleSuffix={titleSuffix}
    titleShort={titleShort}
    description={description}
    pageType={pageType}
  />

  <BaseBody highlight={highlight}>
    <slot />
  </BaseBody>
</Html>
