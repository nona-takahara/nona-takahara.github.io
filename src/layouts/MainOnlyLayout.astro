---
import BaseLayout from "@layouts/BaseLayout.astro";
import type { Props as Props } from "./BaseLayout.astro";

const {
  katex,
  titleShort,
  titleSuffix = " | こーげんやさい",
  description,
  pageType,
  highlight,
} = Astro.props;
---

<BaseLayout
  titleShort={titleShort}
  titleSuffix={titleSuffix || " | こーげんやさい"}
  katex={katex}
  description={description}
  pageType={pageType}
  highlight={highlight}
>
  <main id="content" class="container">
    <slot />
  </main>
</BaseLayout>
