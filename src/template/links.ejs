<%_
page = {}
page.title = 'こーげんやさい | リンク集';
_%><%- include('page-head.ejs') %>
  <main>
    <div class="content">
      <section>
        <h2>相互リンク</h2>
        <%_ for(let k of data) { if (k.inter) { _%>
        <div class="floatbox">
        <h3><a href="<%= k.url %>"><%= k.title %></a></h3>
        <%_ if (k.banner) { %><a href="<%= k.url %>"><img src="<%= k.banner %>" class="banner float-l"/></a><%_ } else { %>
        <div class="banner float-l"></div><%_ } %>
        <p><%= k.short ?? "" %></p>
        </div>
        <%_ } } %>
      </section>
