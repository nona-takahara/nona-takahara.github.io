---
import BlogList from "@components/BlogList.astro";
import BaseLayout from "@layouts/BaseLayout.astro";

const data = (await Astro.glob("../../content/blog/*.md")).sort((a, b) => {
  const af = Number(a.file.match(/\d+/g));
  const bf = Number(b.file.match(/\d+/g));
  return bf - af;
});
---

<BaseLayout
  titleShort="こーげんやさいブログ"
  titleSuffix=""
  pageType="blog"
  description="こーげんやさいブログ 記事一覧"
>
  <main id="content" class="container">
    <div class="content">
      <h2>ブログ記事一覧</h2>
      <p>上の方ほど新しいです</p>
      <BlogList props={data} />
    </div>
  </main>
  <nav>
    <div class="container">
      <p>
        <a href="/">[こーげんやさいトップへ]</a>
      </p>
    </div>
  </nav>
</BaseLayout>
